---
const { title, sub = '' } = Astro.props
import Styler from './Styler.astro'
---

<header>
	<a class="sideElement" href="/MW5-mechlab/links"
		><div class="links">Links</div></a
	>
	<div class="sideElement style" id="themeToggle"><Styler /></div>
	<div class="title">
		<h1>{title}</h1>
		{sub !== '' && <h2>{sub}</h2>}
	</div>
	<a class="sideElement" href="/MW5-mechlab/"><div class="links">Mechs</div></a>
	<a class="sideElement" href="#"><div class="mechlab">Mechlab (WiP)</div></a>
</header>
<style>
	header {
		position: sticky;
		padding: 10px;
		margin-bottom: 10px;
		display: grid;
		align-items: center;
		font-size: 16px;
		gap: 1rem;
		grid-template-areas:
			'links title title title style'
			'links title title title mechlab';
	}
	header div {
		background-color: rgba(36, 36, 36, 0.5);
		box-shadow: 0px 0px 7px 8px rgb(104 104 104 / 95%);
		padding: 8px;
		border-radius: 15px;
		display: flex;
		justify-content: center;
		align-items: center;
		text-align: center;
		font-size: 1.3em;
		color: white;
		min-height: 75px;
	}
	header .sideElement:hover {
		backdrop-filter: brightness(70%);
	}
	.title h1 {
		font-size: 1.3em;
	}
	.title {
		grid-area: title;
		flex-flow: column nowrap;
		text-align: center;
	}
	.links {
		grid-area: links;
	}
	.style {
		grid-area: style;
	}
	.links {
		grid-area: links;
	}
	.mechlab {
		grid-area: mechlab;
	}
	@media (max-width: 671px) {
		header {
			grid-template-areas:
				'title title title title'
				'links links style mechlab';
		}
	}
</style>
